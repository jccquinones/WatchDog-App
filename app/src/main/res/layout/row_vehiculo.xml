<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/ra_patente"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round"
        android:fontFamily="@font/europlate"
        android:gravity="center"
        android:text="AI-RL-67"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ra_descripcion"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Descripcion"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_patente"
        app:layout_constraintTop_toBottomOf="@+id/ra_color" />

    <TextView
        android:id="@+id/ra_modelo1"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Modelo"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_marca"
        app:layout_constraintTop_toBottomOf="@+id/ra_tipo" />

    <TextView
        android:id="@+id/ra_anio"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="2011"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_color"
        app:layout_constraintTop_toBottomOf="@+id/ra_modelo1" />

    <TextView
        android:id="@+id/ra_marca"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Marca"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_patente"
        app:layout_constraintTop_toBottomOf="@+id/ra_dueno" />

    <TextView
        android:id="@+id/ra_color"
        android:layout_width="90dp"
        android:layout_height="17dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Color"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_patente"
        app:layout_constraintTop_toBottomOf="@+id/ra_marca" />

    <TextView
        android:id="@+id/ra_dueno"
        android:layout_width="87dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="nombre dueÃ±o"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_patente"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ra_tipo"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Academico"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ra_dueno"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>