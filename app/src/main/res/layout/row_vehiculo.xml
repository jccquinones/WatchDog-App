<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">



    <TextView
        android:id="@+id/ra_patente"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Patente"
        android:textStyle="bold"
        android:fontFamily="@font/europlate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ra_descripcion"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ra_modelo1" />

    <TextView
        android:id="@+id/ra_modelo1"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Modelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ra_patente" />

    <TextView
        android:id="@+id/ra_anio"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Anio"
        app:layout_constraintStart_toEndOf="@+id/ra_marca"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ra_marca"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Marca"
        app:layout_constraintStart_toEndOf="@+id/ra_patente"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ra_color"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Color"
        app:layout_constraintStart_toEndOf="@+id/ra_modelo1"
        app:layout_constraintTop_toBottomOf="@+id/ra_marca" />

</android.support.constraint.ConstraintLayout>